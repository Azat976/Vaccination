@model EFDataApp.Models.Vaccination

@{
    ViewData["Title"] = "Редактирование вакцины";
}

<h1>Изменить</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PatientId" />
            <div class="form-group">
                <label asp-for="Pils" class="control-label">Название</label>
                <input asp-for="Pils" class="form-control" />
                <span asp-validation-for="Pils" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HaveVaccination" />Наличие согласия
                </label>
            </div>
            <div class="form-group">
                <label asp-for="VaccinationDate" class="control-label">Дата вакцинации</label>
                <input asp-for="VaccinationDate" class="form-control" />
                <span asp-validation-for="VaccinationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>