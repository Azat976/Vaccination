@model EFDataApp.Models.Patient
@{
    ViewBag.Title = "Удаление пациента";
}

<div>
    <dl class="dl-horizontal">
        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.Family)
        </dd>

        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Пол</dt>
        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt>Снилс</dt>
        <dd>
            @Html.DisplayFor(model => model.Snils)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>